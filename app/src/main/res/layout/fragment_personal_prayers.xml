<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_500"
    tools:context=".ui.personal.PersonalPrayersFragment">


    <TextView
        android:id="@+id/textPersonalPrayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonNextPersonalPrayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@id/textPersonalPrayers"
        android:text="@string/btn_next_prayers"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/editTextPrayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNextPersonalPrayer"
        android:hint="Введите молитву"
        android:background="@color/white"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/buttonAddPrayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPrayer"
        android:layout_marginTop="10dp"
        android:text="@string/btn_add_prayers"
        android:textColor="@color/black" />

</RelativeLayout>