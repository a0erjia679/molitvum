<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_500"
    tools:context=".ui.prayers.PrayersFragment">



    <TextView
        android:id="@+id/textPrayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_marginTop="10dp"
         />

    <!-- Кнопка для переключения на следующую молитву -->
    <Button
        android:id="@+id/buttonNextPrayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPrayers"
        android:layout_marginTop="10dp"
        android:text="@string/btn_next_prayers"
        android:textColor="@color/black"/>

</RelativeLayout>