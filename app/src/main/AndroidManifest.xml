<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MolitvUM_GriOE"
        tools:targetApi="31">
        <!-- Главная активность -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность для "Молитвы для учёбы" -->
        <activity
            android:name=".StudyPrayersActivity"
            android:exported="true"
            android:label="@string/title_study_prayers" />





        <!-- Активность для "Календарь" -->
        <activity
            android:name=".CalendarActivity"
            android:exported="true"
            android:label="@string/title_calendar" />

        <!-- Активность для "Поставить свечу" -->
        <activity
            android:name=".CandleActivity"
            android:exported="true"
            android:label="@string/title_candle" />


    </application>

</manifest>